<!DOCTYPE html>
<html lang="en">


<body>
  <header>
    <% include ./partials/_header.ejs %>
  </header>


  <% if(user){ %>

  <h3>Urls List</h3>
  <ul>
    <% for(const url in urls) { %>
    <form method="POST" action="/urls/<%= url %>/delete">
      <li>
        <a href="/u/<%= url %>">
          <%= url %></a>:
        <%= urls[url].url %>
      </li>
      <a href="/urls/<%= url %>">Edit</a>
      <input type="submit" value="Delete">
    </form>
    <% }; %>
  </ul>
  <% } else { %>
  <h3>Please login or register to see URL's</h3>
  <% }; %>
  <a href='/urls/new'>Click here to shorten another URL.</a>
</body>

</html>